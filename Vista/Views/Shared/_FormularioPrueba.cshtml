@using Vista.ViewModels;
@model PruebaViewModelFormulario;

<div class="row mb-3">
    <div class="col-12 col-md-12">
        <form asp-action="Crear" asp-controller="Prueba">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row d-flex col-md-12">
                <span asp-validation-for="Nombre" class="text-center text-danger"></span>
                <!-- Para dispositivos móviles, col-12 hará que ocupe todo el ancho -->
                <input asp-for="Nombre" placeholder="Nombre de prueba"
                       class="form-control form-control-user col-8 col-md-8 me-auto mb-2 mb-md-0" />

                <!-- El botón también ocupará todo el ancho en móviles -->
                <button type="submit" class="btn-sm btn-primary col-3 col-md-3">
                    <i class="bi bi-person-plus-fill"></i> Crear
                </button>
            </div>
        </form>
    </div>
</div>
