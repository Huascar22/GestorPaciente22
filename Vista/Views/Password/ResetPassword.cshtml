@model Vista.ViewModels.ResetPasswordViewModel;

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<body class="bg-gradient-primary">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image">
                                <img class="mt-5" src="~/imagenes/doctorLogin.png" alt="Alternate Text" style="height:400px; " />
                            </div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Reseteo de clave</h1>

                                    </div>
                                    <form class="user" asp-action="ResetPassword" asp-controller="Password">

                                        <input type="hidden" asp-for="Correo" />
                                        <input type="hidden" asp-for="Code" />

                                        <span asp-validation-for="Password" class="text-danger text-center"></span>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   asp-for="Password"
                                                   placeholder="Ingrese su clave...">
                                        </div>

                                        <span asp-validation-for="ConfirPassword" class="text-danger text-center"></span>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-user"
                                                   asp-for="ConfirPassword"
                                                   placeholder="Confirmar Clave...">
                                        </div>

                                        <button type="submit" class="btn btn-primary btn-user btn-block">
                                            Reset Password
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

